<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <script src="https://cdn.tailwindcss.com"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="./css/styles.css" rel="stylesheet" />
    <title>Todo Manager</title>
    <style>
      /* Disable text selection */
      body {
        user-select: none;
        -webkit-user-select: none; /* Safari */
        -moz-user-select: none; /* Firefox */
        -ms-user-select: none; /* Internet Explorer/Edge */
      }
    </style>
  </head>

  <body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <%- include('header') %>
        <form>
          <div class="flex gap-2 py-4">
            <div class="flex-auto">
              <input
                type="text"
                placeholder="What's next?"
                required
                class="leading-2 border border-gray-300 text-gray-900 w-full rounded p-2 text-sm"
              />
            </div>
            <div class="flex-auto">
              <input
                type="date"
                class="leading-4 border border-gray-300 text-gray-900 w-full rounded p-2 text-sm"
              />
            </div>
            <div class="flex-none">
              <button
                type="submit"
                class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb-1"
              >
                Add
              </button>
            </div>
          </div>
        </form>
        <div><%- include('todos') %></div>
      </div>
    </div>

    <table></table>
    <footer></footer>
  </body>
</html>
